{
  "schemaVersion": 1,
  "id": "hexstages",
  "version": "${version}",
  "name": "Hexstages",
  "description": "Hexcasting x Gamestages compatiblity mod, allowing restricting casting specific Hex patterns based on Gamestages.",
  "authors": [
    "anabsolutesloth"
  ],
  "contact": {
    "homepage": "https://anabsolutesloth.github.io/hexstages",
    "sources": "https://github.com/anabsolutesloth/hexstages"
  },
  "license": "MIT",
  "icon": "assets/hexstages/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [{
      "adapter": "kotlin",
      "value": "com.emperdog.hexstages.fabric.FabricHexstages"
    }],
    "client": [{
      "adapter": "kotlin",
      "value": "com.emperdog.hexstages.fabric.FabricHexstagesClient"
    }],
    "modmenu": [{
      "adapter": "kotlin",
      "value": "com.emperdog.hexstages.fabric.FabricHexstagesModMenu"
    }]
  },
  "mixins": [
    "hexstages-common.mixins.json",
    "hexstages-fabric.mixins.json"
  ],
  "depends": {
    "minecraft": "${versions.minecraft}",
    "fabricloader": ">=${versions.fabric_loader}",
    "fabric-api": ">=${versions.fabric_api}",
    "fabric-language-kotlin": ">=${versions.kotlin_fabric}",
    "architectury": ">=${versions.architectury}",
    "hexcasting": ">=${versions.hexcasting_dependency}",
    "cloth-config": ">=${versions.clothConfig}"
  },
  "suggests": {
    "modmenu": ">=${versions.modMenu}"
  }
}
